@import '../../../stylus/colors.styl'

:host
  display grid
  grid-template-columns 400px 1fr
  grid-template-rows 1fr
  padding-top 20px

.products__filter
  grid-column-start 1
  grid-column-end 2

.products__list
  grid-column-start 2
  grid-column-end 3
  padding-left 20px
  position relative

.product
  display flex
  height 150px
  .left
    width 150px
  .product__name
    text-decoration underline
    cursor pointer
  .product__price
    font-weight bold

