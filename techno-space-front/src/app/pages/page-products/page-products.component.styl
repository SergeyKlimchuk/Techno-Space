@import '../../../stylus/colors.styl'

.panel
  display flex
  flex-direction column

.status_panel
  background #ddd
  border-top-left-radius 4px
  border-top-right-radius 4px
  padding 10px

.content
  display flex

.filter
  width 300px
  display flex
  flex-direction column
  padding-right 16px
  .text
    text-align center
    padding 10px 0
  .param
    padding 10px 0
    border-bottom 1px solid #ddd
    .param__name
      font-weight bold


.price-inputs
  input
    width 32px


.page-panel
  flex-grow 2
  display flex
  justify-content right
  margin-top 20px
  .wrapper
    display flex
  .btn
    width 48px
    height 32px
    border 1px solid #ddd
    background #fff
    color #333
    display flex
    justify-content center
    align-items center
    transition .2s
    cursor default
    font-size 18px

    &.selected
      background #666
      border-color #666
      color #fff
    &:disabled
      background-color #ddd
      color #666
      cursor default
    &:not(:disabled):not(.selected):hover
      background-color #eee
      cursor pointer
    & + .btn
      border-left none
  .btn_prior
    border-top-left-radius 4px
    border-bottom-left-radius 4px

.list
  display flex
  flex-wrap wrap
  border 1px solid #ddd
  .item
    width 25%
    display flex
    flex-direction column
    list-style none
    padding 10px
    box-sizing border-box
    &:not(:nth-child(4n))
      border-right 1px solid #ddd
    &:not(:nth-child(-n+4))
      border-top 1px solid #ddd
    .image
      width 80%
      align-self center
    .text
      align-self flex-start
