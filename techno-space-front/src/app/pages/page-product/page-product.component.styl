:host
  display flex
  flex-direction column

.square:after
  content ""
  display block
  padding-bottom 100%

.info
  width 100%
  display flex
  padding-top 20px
  .info__image
    width 40%
    position relative
    &:after
      padding-bottom 100%
    img
      width 100%
      height 100%
  .info__text
    display flex
    flex-direction column
    border-bottom 5px solid mat-color($app-primary);
    .product__name
      font-size 32px
      font-weight inherit
    .price__block
      padding 10px
      display flex
      justify-content center
      .product__price
        font-size 32px
        font-weight 500
        padding-right 10px

