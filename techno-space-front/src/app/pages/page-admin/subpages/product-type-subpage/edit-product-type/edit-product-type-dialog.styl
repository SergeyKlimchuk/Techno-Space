:host
  display flex
  flex-direction column

.image-block
  display flex
  justify-content center
  align-items center
  .wrapper
    position relative
    padding 10px
    .image[src=""]
      width 150px
      height 150px
      display flex
      justify-content center
      align-items center
      box-shadow 0 0 4px #888
      border-radius 8px
      padding 10px

  .image-hoverable
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    transition .2s
    border-radius 4px
    background-color rgba(0, 0, 0, .2)
    color #fff
    opacity 0
    display flex
    justify-content center
    align-items center
    &:hover
      opacity 1
      cursor pointer
    mat-icon
      font-size 64px
      width 64px
      height 64px

.property
  width 100%

.actions
  justify-content right
  display flex
  *:not(:first-child)
    margin-left 10px
