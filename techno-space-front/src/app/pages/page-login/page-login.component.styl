@import '../../../stylus/colors.styl'

:host
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center

.header-wrapper
  display flex
  flex-direction column
  align-items center
  cursor default
  .icon
    font-size 60px
    width 1em
    height 1em
    color #333

.registration-form
  width 500px
  .login-btn
    width 100%

.footer-actions
  display flex
  justify-content space-between
.form-btn
  &_primary
    background #2B86C5
    color white

.form-content
  display flex
  flex-direction column
  padding 0 40px

.registration-link
  text-align center
  text-decoration none
  margin-bottom 16px

.form-footer
  background $header-color
  display flex
  flex-direction column
  color #fff
  cursor default

.footer-row
  display flex
  justify-content center
  align-items center
  .icon
    width 32px
    height 32px


.hoverable
  transition .2s
  border-radius 4px
  padding 5px
  color #fff
  &:hover
    color #eee
    cursor pointer

.error
  background #f44336
  color #fff
  padding 8px
  border-radius 4px
  margin-top -4px
  margin-bottom 10px
  position relative
  &:before
    content ''
    width 0
    height 0
    border-left 10px solid transparent
    border-right 10px solid transparent
    border-bottom 10px solid #f44336
    position absolute
    left 10px
    top -10px

.error-msg
  background #f44336
  color #fff
  padding 8px
  border-radius 4px
  margin-top -4px
  margin-bottom 10px
  position relative
  text-align center
