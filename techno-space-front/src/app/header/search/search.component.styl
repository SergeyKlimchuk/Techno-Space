.container
  width 100%
  height calc(100% - 16px)
  display flex
  flex-direction row
  margin 8px 0
  align-items: center
  border 1px #888 solid
  input
    flex-grow 2
    border none
    background-color transparent
    padding 0 8px
    height 100%
  .loop
    background-position: center
    width  24px
    height 24px
    display flex
    justify-content center
    align-items center
    margin-right 5px
