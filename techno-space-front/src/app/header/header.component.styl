@import './../../styles'

header-height = 50px
header-color = #333

header
  position: absolute
  z-index: 10
  top: 0
  width: 100vw
  background: header-color
  height: header-height
  color: white
  box-shadow: 0 0 10px black
  display: flex
  justify-content: center

.item
  height: 100%
  display: flex
  align-items: center
  text-decoration: none
  color: white
  font-weight: bold
  margin: 0 20px
  transition: .2s
  &:hover
    color: main-color
    transition: .2s

.item_right
  flex-grow: 1;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;

  & > *
    height 100%

.container-center
  width: 1280px
  max-width: 70%
  flex-direction: row
  display: flex
