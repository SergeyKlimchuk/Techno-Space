@import './../../../styles'

.dropdown
  position relative
  height 100%

.dropdown:hover
  .target
    color main-color
  .list
    visibility visible

.target
  cursor pointer
  height 100%
  display flex
  justify-content: center
  align-items: center
  padding: 0 10px

.list
  position absolute
  top 100%
  left 0px
  width 100%
  background #333
  color #fff
  border 1px solid rgba(99,114,130,0.15)
  border-top 0
  transition .2s
  z-index -1
  visibility hidden

  & li
    list-style none
    padding 4px
    text-align center
    cursor pointer

  & li:hover
    color main-color
    background-color #444

  & li:last-child
    padding-bottom 10px
