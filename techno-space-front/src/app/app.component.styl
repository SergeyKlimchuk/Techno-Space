.content
  width 100%
  height calc(100vh - 50px)
  padding-top: 50px
  display flex
  flex-direction column
  section
    flex-grow 2
    .content-wrapper
      width 1280px
      height: 100%
      margin auto
      box-shadow 0 0 24px #aaa
      background-color: #eee

  footer
    flex-grow 0
    background-color #333
    color #888
    padding 10px 0 40px 0


