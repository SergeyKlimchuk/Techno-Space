@import '../../../stylus/colors.styl';

:host
  display flex
  position relative
  overflow hidden
  min-height 240px

.label
  background-color $main-color
  color #fff
  position absolute
  padding 8px
  z-index 1

.btn__wrapper
  position absolute
  height 100%
  display flex
  justify-content center
  align-items center
  background-color transparent
.btn__wrapper-right
  right 0
.btn__wrapper-left
  left 0
.btn
  z-index 1
  display flex
  justify-content center
  align-items center
  cursor pointer
  font-size 48px !important
  width 50px !important
  height 50px !important
  color #fff
  background-color rgba(0,0,0,.12)
  transition .2s
  &:hover
    background-color rgba(0,0,0,.24)


.square
  position relative
  &:after
    content ""
    display block
    padding-bottom 100%
  .square__content
    position absolute
    width 100%
    height 100%

.list
  display flex
  width 100%
  height 100%
  .list__item
    min-width 25%

.item
  box-sizing border-box
  padding 10px
  width 100%
  height 100%
  display flex
  flex-direction column
  cursor pointer
  &:hover
    color $main-color
  .item__img
    flex-grow 2
    padding 20px
    display flex
    justify-content center
    img
      width 100%
  .item__text
    text-align center
    font-weight bold
    height 24px
