@import '../../../stylus/colors.styl';

:host
  display flex
  position relative
  overflow hidden

.label
  background-color $main-color
  color #fff
  position absolute
  padding 8px
  z-index 1

.btn__wrapper
  position absolute
  height 100%
  display flex
  justify-content center
  align-items center
  background-color transparent
.btn__wrapper-right
  right 0
.btn__wrapper-left
  left 0
.btn
  z-index 1
  display flex
  justify-content center
  align-items center
  cursor pointer
  font-size 48px !important
  width 50px !important
  height 50px !important
  color #fff
  background-color rgba(0,0,0,.12)
  transition .2s
  &:hover
    background-color rgba(0,0,0,.24)


.list
  display inherit
  padding 0 50px
  transition .2s
  .list__item
    display flex
    flex-direction column
    padding 24px
    box-sizing border-box
    border-bottom 4px solid transparent
    cursor pointer
    min-width 17.4%
    &:hover
      border-bottom-color #673AB7
    .item__image
      display flex
      justify-content center
      align-items center
      height 180px
      img
        height 80%
        object-fit cover
    .item__text
      font-weight bold
      text-align center
