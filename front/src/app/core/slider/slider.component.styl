.container
  width 100%
  height 100%
  position relative

.icon
  position absolute
  top 0px
  font-size: 48px
  width 50px
  height 50px
  display flex
  justify-content center
  align-items center
  cursor pointer
  transition .2s
  z-index 1
  color white
  background-color rgba(0,0,0,.2)
  top 50%
  transform translateY(-50%)
  &:hover
    background rgba(155, 155, 155, .4)

.left
  left 0px

.right
  right 0px

.images
  display flex
  width 100%
  height 100%
  flex-direction row
  overflow hidden
  position relative

.page
  position absolute
  left 0px
  top 0px
  width 100%
  height 100%

.image
  width 100%
  height 100%
  background-size cover
