@import '../../../stylus/colors.styl'

.container
  border 1px solid rgba(0,0,0,.12)
  border-radius 4px
  padding 20px 20px 0 20px
  display flex
  flex-direction column
  position relative
  transition .2s
  &.selectable:hover
    border-color $main-color #673AB7
    box-shadow 0 3px 1px -2px rgba(103,58,183, .2),0 2px 2px 0 rgba(103,58,183, .14),0 1px 5px 0 rgba(103,58,183, .12)
  .selectable-panel
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    cursor pointer
    z-index 20
  .row
    display flex
    & > *:first-child
      flex-grow 2
    .btn
      width 42px
      height 42px
      margin-left 20px
    .btn-favorite
      border-radius 50%
      background-color #fff
      color #ffd740
      border 1px solid rgba(0,0,0,.12)
      cursor pointer

