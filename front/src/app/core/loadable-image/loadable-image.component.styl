:host
  display block
  width 100%
  height 100%
  position relative

.image
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center

.restore-btn
  position absolute
  right 10px
  bottom 10px

.select-image-panel
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  transition .2s
  border-radius 4px
  border 1px solid rgba(0,0,0,.12)
  background-color rgba(0, 0, 0, .2)
  color #fff
  opacity 0
  display flex
  justify-content center
  align-items center
  &:hover
    opacity 1
    cursor pointer
  mat-icon
    font-size 64px
    width 64px
    height 64px
