@import '../../../stylus/colors.styl'

// TODO: Пересесть с гридов на флексы

:host
  display grid
  grid-template-columns 400px 1fr
  grid-template-rows 1fr
  padding-top 20px

.products__filter
  grid-column-start 1
  grid-column-end 2

.products__list
  grid-column-start 2
  grid-column-end 3
  padding-left 20px
  position relative

.product
  display flex
  height 150px
  &:hover
    background-color rgba(0,0,0,.04)
  &:not(:first-child)
    margin-top 10px
  .left
    width 150px
    display block
  .right
    padding-left 20px
  .product__name
    text-decoration underline
    cursor pointer
    padding 10px 0
    color #673ab7
  .product__price
    font-weight bold
    text-align right
    font-size 1.2em

