@import '../../../../stylus/colors.styl'

.product
  display flex
  height 170px
  margin-top 10px
  &:hover
    box-shadow 0 6px 10px 0 rgba(0, 0, 0, 0.14), 0 1px 18px 0 rgba(0, 0, 0, 0.12), 0 3px 5px -1px rgba(0, 0, 0, 0.3)
  .left
    width 150px
    display block
    .image-wrapper
      position relative
      overflow hidden
      width 150px
      height 150px
      img
        position absolute
        top 50%
        left 50%
        width 100%
        transform translate(-50%, -50%)
        object-fit cover
  .right
    padding-left 20px
    display flex
    flex-direction column
    .product__descriptiom
      flex-grow 2
  .product__name
    text-decoration underline
    cursor pointer
    padding 10px 0
    color $main-color
    font-weight bold
  .product__price
    font-weight bold
    text-align right
    font-size 1.2em

