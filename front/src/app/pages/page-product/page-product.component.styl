bordered()
  border 1px solid rgba(0,0,0,.12)
  border-radius 4px
  overflow hidden

:host
  display flex
  flex-direction column
  min-height 100%
  justify-content center

.square:after
  content ""
  display block
  padding-bottom 100%

.info
  width 100%
  display flex
  .info__image
    bordered()
    width 40%
    position relative
    .discount__icon
      position absolute
      right 0
      bottom 0
      width 20%
      height 20%
      cursor pointer
      border-left 1px solid rgba(0,0,0,.12)
      border-top 1px solid rgba(0,0,0,.12)
      background-color #fff
      padding 4px
      border-top-left-radius 4px
    img
      width 100%
      height 100%
  .info__text
    display flex
    flex-direction column
    padding-left 24px
    .product__name
      font-size 32px
      font-weight bold
      padding 12px 0
    .price__block
      padding 10px
      display flex
      justify-content left
      .product__price
        font-size 32px
        font-weight 500
        padding-right 10px


.label
  padding 24px 0

.product__properties
  bordered()
  .properties__row:hover
    background-color rgba(0,0,0,.08)


