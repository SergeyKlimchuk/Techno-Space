@import '../../../stylus/colors.styl'

$transition-time = .2s

:host
  display flex
  flex-direction column
  flex-grow 2
  padding 0 20px 20px 20px

.label
  padding 20px 0

.categories-list
  display grid
  grid-template-columns 1fr 1fr 1fr 1fr
  grid-gap 20px

.category
  display flex
  flex-direction column
  align-items center
  cursor pointer
  padding-bottom 0
  overflow hidden
  &:hover
    box-shadow 0 6px 10px 0 rgba(0, 0, 0, 0.14), 0 1px 18px 0 rgba(0, 0, 0, 0.12), 0 3px 5px -1px rgba(0, 0, 0, 0.3)
    .text
      color $main-color
  .icon
    box-sizing border-box
    padding 20px
    width 80%
    flex-grow 2
  .text
    font-weight bold
    border-top 1px solid #ddd
    padding 16px
    width 100%
    text-align center
    transition .1s
