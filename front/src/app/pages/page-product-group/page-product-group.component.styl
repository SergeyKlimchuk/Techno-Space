@import '../../../stylus/colors.styl'

$transition-time = .2s

:host
  height 100%
  display flex
  flex-direction column

.panel
  height 100%
  border-radius 0px
  display flex
  justify-content space-between
  flex-wrap wrap


.group
  width 24%
  border 1px solid #333
  transition $transition-time
  display flex
  flex-direction column
  height 200px
  cursor pointer
  .icon-block
    flex-grow 2
    display flex
    justify-content center
    align-items center
  &:hover
    border-color $main-color
    .info
      color $main-color
  .info
    text-align center
    padding 8px
    transition $transition-time
