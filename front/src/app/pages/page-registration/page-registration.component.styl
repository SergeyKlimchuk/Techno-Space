@import '../../../stylus/colors.styl'

.wrapper
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center

.registration-form
  width 740px
  .footer-actions
    display flex
    justify-content space-between
  .form-btn
    width 200px
    background #eee
    &_primary
      background #2196F3
      color white

.form-content
  display flex
  flex-direction column
  padding 0 40px

.form-header
  padding 10px 0 20px 0

.form-footer
  background linear-gradient(225deg, #FF3CAC 0%, #784BA0 50%, #2B86C5 100%)
  color white
  display flex
  justify-content center
  align-items center
  .icon
    width 32px
    height 32px
    margin 10px
    padding 10px
    transition .2s
  .icon:hover
    color #ddd
    cursor pointer
    background rgba(255,255,255, .1)
    border-radius 4px

.error
  background #f44336
  color #fff
  padding 8px
  border-radius 4px
  margin-top -4px
  margin-bottom 10px
  position relative
  &:before
    content ''
    width 0
    height 0
    border-left 10px solid transparent
    border-right 10px solid transparent
    border-bottom 10px solid #f44336
    position absolute
    left 10px
    top -10px

