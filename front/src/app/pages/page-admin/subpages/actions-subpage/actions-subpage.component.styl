.item-hover
  background-color rgba(0, 0, 0, 0.12)

:host
  display grid
  grid-template-columns 400px 1fr
  grid-gap 24px
  padding 24px 0

.list__title
  padding-bottom 16px

.not-found
  padding-top 16px
  display flex
  justify-content center
  align-items center
  color #7b7b7b

.list__btn
  cursor pointer
  &:hover
    background-color rgba(0,0,0,.12)

.footer
  display flex
  justify-content right
  align-items center
  padding 16px
  border-top 1px solid rgba(0,0,0,.12)

.panel
  display flex
  flex-direction column
  .image
    height 200px

.await-message
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center
  color #7b7b7b

.actions
  display flex
  justify-content right
  padding-top 16px
  button
    margin-left 16px

.list__content
  margin 0 -16px

.list__list
  display flex
  flex-direction column
  .list__item
    display flex
    padding-left 24px
    border-top 1px solid rgba(0, 0, 0, 0.12)
    &:hover
      @extend .item-hover
    .item__text
      flex-grow 2
      cursor pointer
      display flex
      align-items center


.products
  padding 24px
  border-radius 8px
  border 1px solid rgba(0,0,0,0.12)
  h4
    padding-bottom 24px
  .product-choose
    margin-top 16px
  .products-list
    list-style none
    li
      padding 8px 0

.discount
  padding 24px
  margin-bottom 1.25em
  border-radius 4px
  border 1px solid rgba(0,0,0,.12)
  .discount__properties
    display flex
    flex-direction column
    & > *
      min-width 240px
  & > *:not(:first-child)
    margin-top 24px
