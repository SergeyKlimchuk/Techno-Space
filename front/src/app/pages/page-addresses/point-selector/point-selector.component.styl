$gray-color = rgba(0,0,0,.36)

:host
  display flex
  padding 16px
  align-items center

.block
  display flex
  align-items center

mat-select
  max-width 240px
  min-width 120px
  border-top 1px solid $gray-color
  border-bottom 1px solid $gray-color
  padding 10px

mat-icon
  font-size 32px
  width 32px
  height 32px
  color $gray-color
