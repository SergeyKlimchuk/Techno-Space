@import '../../../stylus/colors.styl'

:host
  display flex
  flex-direction column
  position relative
  padding-top 24px

menu
  display flex
  padding-bottom 24px
  .points
    flex-grow 2
    overflow hidden
    .actions
      margin -16px -16px 0 -16px
      padding 16px
      background-color #fafafa
      border-bottom 1px solid rgba(0,0,0,0.12)
  .addresses
    display flex
    flex-direction column
    margin-left 24px
    padding 24px
    h3
      padding 8px 0
    button
      text-align left



.addresses-list
  padding-bottom 20px
  li
    color $main-color
    cursor pointer
    list-style none
    padding 10px
    .address__item
      padding 20px
      &:hover
        hard-shadow()


.map
  height 640px
  box-shadow 0 24px 38px 3px rgba(0,0,0,0.14), 0 9px 46px 8px rgba(0,0,0,0.12), 0 11px 15px -7px rgba(0,0,0,0.20)
  & > *
    width 100%
    height 100%
  .map-error
    display flex
    flex-direction column
    justify-content center
    align-items center
    text-align center
    .icon
      color #777
      font-size 64px
      width 64px
      height 64px

