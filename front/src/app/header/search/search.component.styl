.container
  position relative
  width 100%
  height 1em
  padding 7px 8px 8px 8px
  display flex
  flex-direction row
  align-items: center
  border-radius 3px
  background-color #fafafa
  input
    flex-grow 2
    border none
    background-color transparent
    padding 0 8px
    height 1em
    color #333
  .loop
    background-position: center
    width  24px
    height 24px
    display flex
    justify-content center
    align-items center
    color black
    cursor pointer

.hidden
  visibility hidden
