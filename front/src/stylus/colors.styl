$main-color = #673AB7
$header-color = linear-gradient(225deg, #FF3CAC 0%, #784BA0 50%, #2B86C5 100%)
hard-shadow()
  box-shadow 0 6px 10px 0 rgba(0, 0, 0, 0.14), 0 1px 18px 0 rgba(0, 0, 0, 0.12), 0 3px 5px -1px rgba(0, 0, 0, 0.3)

selectable()
  &:hover
    background-color rgba(0,0,0,.08)
    cursor pointer
